<body>
    <div class="container-fluid">
        <div class="row flex-nowrap">
            <div class="col-auto col-md-3 col-xl-2 px-sm-2 px-0" style="background-color: #3c4b64;width: 300px;">
                <div class="d-flex flex-column align-items-center align-items-sm-start px-3 pt-2 text-white min-vh-100">
                    <div class="dropdown pb-4 mt-2" style="margin: 0 auto;">
                        <a href="#" class="d-flex align-items-center text-white text-decoration-none dropdown-toggle" id="dropdownUser1" data-bs-toggle="dropdown" aria-expanded="false">
                            <img src="~/Content/images/logo/admin.png" width="40" height="40" class="rounded-circle" alt="logo">
                            <span class="d-none d-sm-inline mx-1">ADMIN</span>
                        </a>

                        <ul class="dropdown-menu dropdown-menu-dark text-small shadow">
                            <li class="header__navbar-item">
                                @if (Session["UserID"] == null)
                                {
                                    <a href="/Account/Login" class="nav-link text-danger fs-5">Đăng nhập</a>
                                }
                                else
                                {
                                    <a class="nav-link text-danger fs-4" href="@Url.Content("~/Account/Logout")">Đăng xuất</a>
                                }
                            </li>
                        </ul>
                    </div>
                    @if (Session["UserID"] == null)
                    {
                        <div></div>
                    }
                    else
                    {

                        <ul class="nav nav-pills flex-c olumn mb-sm-auto mb-0 align-items-center align-items-sm-start" id="menu">
                            <li class="nav-item sidebar-items">
                                <a href="/Admin/DashBoard/DashBoard" class="admin-menu nav-link align-middle px-0" style="border-radius: 0px;
                            font-size: 20px;
                            display: block;
                            padding: 15px;">
                                    <i class="fa-solid fa-store text-white"></i> <span class="ms-1 d-none d-sm-inline text-white">Trang chủ</span>
                                </a>
                            </li>
                            <li class="nav-item sidebar-items" style="">
                                <a href="/Admin/Category/ListCategory" class="admin__menu nav-link align-middle px-0" style="border-radius: 0px;font-size: 20px;
                            display: block;
                            padding: 15px;">
                                    <i class="fa-solid fa-bars-progress text-white"></i>
                                    <span class="ms-1 d-none d-sm-inline text-white">Quản lý thể loại</span>
                                </a>
                            </li>

                            <li class="nav-item sidebar-items">
                                <a href="/Admin/Product/ListProduct" class="admin__menu nav-link align-middle px-0" style="border-radius: 0px;font-size: 20px;
                                                display: block;
                                                padding: 15px;">
                                    <i class="fa-solid fa-database text-white"></i> <span class="ms-1 d-none d-sm-inline text-white">Quản lí Sản phẩm</span>
                                </a>
                            </li>

                            <li class="nav-item sidebar-items">
                                <a href="/Admin/Stats/Index" class="admin__menu nav-link align-middle px-0" style="border-radius: 0px;font-size: 20px;
                            display: block;
                            padding: 15px;">
                                    <i class="fa-solid fa-chart-simple text-white"></i> <span class="ms-1 d-none d-sm-inline text-white">Thống kê doanh thu cửa hàng</span>
                                </a>
                            </li>
                        </ul>
                    }
                </div>
            </div>

            <div style="width: 1190px;background-color: #e5e9ec;">
                @RenderBody()
            </div>

